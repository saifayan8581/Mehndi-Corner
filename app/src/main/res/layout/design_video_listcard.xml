<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@android:color/white">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/video_tag"
               android:text="Video Name/Desc"
               android:layout_marginRight="5dp"
               android:layout_alignParentLeft="true"
               android:textSize="25dp"
               android:textColor="@android:color/holo_blue_dark"
               android:layout_marginTop="5dp"
               style="Bold|Italic"/>
               <Button
                   android:layout_width="90dp"
                   android:layout_height="40dp"
                   android:layout_marginRight="10dp"
                   android:background="@android:color/holo_blue_dark"
                   android:text="Follow Me"
                   android:textColor="@android:color/white"
                   android:textStyle="bold"
                   android:id="@+id/follow_me"
                   android:padding="3dp"
                   android:layout_alignParentRight="true"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_marginTop="10dp"
               android:id="@+id/design_photo"
               android:scaleType="centerCrop" />
               <ImageView
                   android:layout_width="90dp"
                   android:layout_height="70dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="20dp"
                   android:id="@+id/video_play_btn"
                   android:src="@drawable/video_play_btn"
                   android:clickable="true"/>
           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:paddingTop="10dp"
               android:weightSum="100"
               android:layout_marginRight="5dp"
               android:orientation="horizontal">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:orientation="horizontal"
                   android:gravity="left"
                   android:id="@+id/imageslayout"
                   android:layout_gravity="left"
                   android:layout_weight="80">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="30"
                       android:id="@+id/share"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/share"/>
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="30"
                       android:src="@drawable/favorite"
                       android:scaleType="centerCrop"
                       android:id="@+id/favorites"
                       android:layout_marginRight="20dp"
                       android:layout_toRightOf="@+id/share"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:weightSum="30"
                   android:orientation="horizontal"
                   android:layout_gravity="right"
                   >
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="30"
                       android:scaleType="centerCrop"
                       android:src="@drawable/like"
                       android:layout_marginRight="10dp"
                       android:id="@+id/like_btn"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:layout_marginTop="7dp"
                       android:id="@+id/count_likes"
                       android:text="345"
                       android:layout_toRightOf="@+id/like_btn"
                       android:textSize="10dp"/>
               </RelativeLayout>
           </LinearLayout>
       </LinearLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>